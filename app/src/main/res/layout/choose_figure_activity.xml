<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choose_figure_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseFigureActivity"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/SecondaryContainer"
            android:text="@string/choose_figure"
            android:textColor="@color/onSecondaryContainer"
            android:gravity="center"
            android:textSize="20dp"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageButton
                    android:id="@+id/choose_cube"
                    android:layout_margin="32dp"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:src="@drawable/cube"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_border"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cube"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/secondary"
                    android:gravity="center"/>

            </LinearLayout>

        </FrameLayout>

        <ImageButton
            android:id="@+id/back_button_4"
            android:layout_margin="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:layout_gravity="bottom|left"
            android:background="@drawable/circle_button"
            />
        <ImageButton
            android:id="@+id/next_button"
            android:layout_margin="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_forward"
            android:layout_gravity="bottom|right"
            android:background="@drawable/circle_button"
            />
    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>